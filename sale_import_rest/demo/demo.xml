<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_channel_api_rest" model="sale.channel">
        <field name="name">Api rest</field>
    </record>

    <record
        id="user_import_demo"
        model="res.users"
        context="{'no_reset_password': True}"
    >
        <field name="name">Sale Import</field>
        <field name="login">sale-import</field>
        <field name="password">sale-import</field>
        <field name="company_id" ref="base.main_company" />
        <field
            name="groups_id"
            eval="[Command.set([ref('sale_import_rest.group_sale_import_rest_api')])]"
        />
    </record>

    <record id="api_key_rest" model="auth.api.key">
        <field name="name">Demo Api Key for Api Rest</field>
        <field name="key">ASecureKeyApiRest</field>
        <field name="user_id" eval="ref('user_import_demo')" />
    </record>

</odoo>
