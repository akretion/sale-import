<odoo>

    <record model="ir.ui.view" id="amazon_product_form_view">
        <field name="name">amazon.product.form (in sale_import_amazon)</field>
        <field name="model">amazon.product</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- TODO -->
                </header>
                <sheet>
                    <!-- TODO -->
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>


    <record model="ir.ui.view" id="amazon_product_tree_view">
        <field name="name">amazon.product.tree (in sale_import_amazon)</field>
        <field name="model">amazon.product</field>
        <field name="arch" type="xml">
            <tree>
                <!-- TODO -->
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="amazon_product_act_window">
        <field name="name">Amazon Product</field> <!-- TODO -->
        <field name="res_model">amazon.product</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="amazon_product_menu">
        <field name="name">Amazon Product</field>
        <field name="parent_id" ref="xmlid of parent menu"/> <!-- TODO -->
        <field name="action" ref="amazon_product_act_window"/>
        <field name="sequence" eval="16"/> <!-- TODO -->
    </record>

</odoo>
